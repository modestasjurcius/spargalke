<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vgtu.iip.lab2.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/veiksmas1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onIputTextBtnClick"
            android:text="@string/veikla1" />

        <TextView
            android:id="@+id/tekstas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tekstas" />

        <Button
            android:id="@+id/veiksmas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onInputInformation"
            android:text="@string/veikla2" />

        <Button
            android:id="@+id/veiksmas3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSendInformation"
            android:text="@string/veikla3" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
