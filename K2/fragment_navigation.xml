<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/firstAddress"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="11dp" />

        <Button
            android:id="@+id/btnAddress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/secondAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddress1" />

        <Button
            android:id="@+id/btnAddress3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thirdAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddress2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>